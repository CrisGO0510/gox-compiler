{
  "name": "gox-runner",
  "displayName": "gox-runner",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:gox"
  ],
  "contributes": {
    "commands": [
      {
        "command": "gox-runner.run",
        "title": "Ejecutar archivo .gox",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "gox-runner.run",
          "group": "navigation",
          "when": "resourceLangId == gox",
          "icon": "$(vsce package)"
        }
      ]
    },
    "languages": [
      {
        "id": "gox",
        "extensions": [
          ".gox"
        ],
        "aliases": [
          "Gox",
          "gox"
        ]
      }
    ],
    "grammars": [
      {
        "language": "gox",
        "scopeName": "source.gox",
        "path": "./syntaxes/gox.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "Gox Theme",
        "uiTheme": "vs-dark",
        "path": "./themes/gox-color-theme.json"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CrisGO0510/gox-compiler.git"
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@vscode/vsce": "^3.2.2"
  }
}
